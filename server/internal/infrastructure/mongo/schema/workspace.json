{
  "$jsonSchema": {
    "additionalProperties": false,
    "bsonType": "object",
    "description": "Schema for workspace documents in the reearth-accounts database",
    "properties": {
      "_id": {
        "bsonType": "objectId",
        "description": "MongoDB internal ID"
      },
      "alias": {
        "bsonType": "string",
        "description": "Unique workspace handle/alias"
      },
      "email": {
        "bsonType": "string",
        "description": "Workspace contact email"
      },
      "id": {
        "bsonType": "string",
        "description": "Workspace ID (ULID format)"
      },
      "integrations": {
        "additionalProperties": {
          "bsonType": "object",
          "properties": {
            "disabled": {
              "bsonType": "bool",
              "description": "Whether the member is disabled"
            },
            "invitedby": {
              "bsonType": "string",
              "description": "User ID of the inviter"
            },
            "role": {
              "bsonType": "string",
              "description": "Member role (owner, maintainer, writer, reader). Default: \"\""
            }
          }
        },
        "bsonType": "object",
        "description": "Map of integration ID to member document. Default: {}"
      },
      "members": {
        "additionalProperties": {
          "bsonType": "object",
          "properties": {
            "disabled": {
              "bsonType": "bool",
              "description": "Whether the member is disabled"
            },
            "invitedby": {
              "bsonType": "string",
              "description": "User ID of the inviter"
            },
            "role": {
              "bsonType": "string",
              "description": "Member role (owner, maintainer, writer, reader). Default: \"\""
            }
          }
        },
        "bsonType": "object",
        "description": "Map of user ID to member document"
      },
      "members_hash": {
        "bsonType": [
          "string",
          "null"
        ],
        "description": "SHA256 hash of members and integrations for uniqueness tracking. Default: \"\""
      },
      "metadata": {
        "bsonType": "object",
        "description": "Extended workspace metadata",
        "properties": {
          "billingemail": {
            "bsonType": "string",
            "description": "Billing email address. Default: \"\""
          },
          "description": {
            "bsonType": "string",
            "description": "Workspace description. Default: \"\""
          },
          "location": {
            "bsonType": "string",
            "description": "Workspace location. Default: \"\""
          },
          "photourl": {
            "bsonType": "string",
            "description": "Workspace photo URL. Default: \"\""
          },
          "website": {
            "bsonType": "string",
            "description": "Workspace website URL. Default: \"\""
          }
        }
      },
      "name": {
        "bsonType": "string",
        "description": "Workspace name"
      },
      "personal": {
        "bsonType": "bool",
        "description": "Whether this is a personal workspace. Default: false"
      },
      "policy": {
        "bsonType": [
          "string",
          "null"
        ],
        "description": "Policy ID reference. Default: \"\""
      },
      "updatedat": {
        "bsonType": "date",
        "description": "Last update timestamp"
      }
    },
    "required": [
      "id",
      "name",
      "alias",
      "email",
      "metadata",
      "members",
      "personal"
    ],
    "title": "Workspace Collection Schema"
  }
}
