# Docker environment configuration for reearth-accounts

# Server Configuration
SKIP_DOTENV=true
REEARTH_HOST=0.0.0.0
REEARTH_PORT=8090

# Database Configuration
# Connect to existing MongoDB service in reearth network
REEARTH_ACCOUNTS_DB=mongodb://reearth-mongo:27017/?directConnection=true
REEARTH_ACCOUNTS_DB_NAME=reearth_account 

# Cerbos Configuration
CERBOS_HOST=reearth-cerbos:3593

# CORS Configuration
REEARTH_ACCOUNTS_ORIGINS=http://localhost:3000,http://reearth-accounts-dev,https://*.netlify.app

# Mock auth for demo
REEARTH_MOCK_AUTH=false

# Auth Configuration (uncomment and configure as needed)
REEARTH_AUTH0_DOMAIN=https://example.auth0.com
REEARTH_AUTH0_AUDIENCE=https://api.reearth.example.com
REEARTH_AUTH0_CLIENTID=
REEARTH_AUTH0_CLIENTSECRET=
